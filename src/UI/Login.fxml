<AnchorPane prefHeight="125.0" prefWidth="318.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="UI.LoginController">
   <children>
      <GridPane layoutX="11.0" layoutY="14.0" prefWidth="296.0" AnchorPane.leftAnchor="11.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="143.0" minWidth="10.0" prefWidth="77.0" />
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="219.0" minWidth="10.0" prefWidth="219.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label alignment="CENTER" text="User:">
               <GridPane.margin>
                  <Insets left="24.0" />
               </GridPane.margin></Label>
            <TextField fx:id="usernameBox" prefHeight="25.0" prefWidth="201.0" promptText="Username..." GridPane.columnIndex="1" />
         </children>
      </GridPane>
      <Button fx:id="loginButton" layoutX="167.0" layoutY="86.0" mnemonicParsing="false" onAction="#handleLogin" text="Login" />
      <Button fx:id="registerButton" layoutX="45.0" layoutY="86.0" mnemonicParsing="false" onAction="#handleRegister" text="Register New User" />
      <Button layoutX="223.0" layoutY="86.0" mnemonicParsing="false" onAction="#handleAdminLogin" text="Admin login" />
   </children>
</AnchorPane>
